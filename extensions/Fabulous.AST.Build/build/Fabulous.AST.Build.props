<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- Generate to a visible location in the project, not obj/ -->
    <FabulousAstJsonOutputDir Condition="'$(FabulousAstJsonOutputDir)' == ''">$(MSBuildProjectDirectory)\Generated\</FabulousAstJsonOutputDir>

    <!-- Enable/disable generation (useful for CI scenarios) -->
    <EnableFabulousAstJsonGeneration Condition="'$(EnableFabulousAstJsonGeneration)' == ''">true</EnableFabulousAstJsonGeneration>
  </PropertyGroup>

  <!-- Define the FabulousAstJson item type -->
  <ItemGroup>
    <AvailableItemName Include="FabulousAstJson" />
  </ItemGroup>

  <!-- Default metadata for FabulousAstJson items -->
  <ItemDefinitionGroup>
    <FabulousAstJson>
      <!-- Type generation options -->
      <RootName>Root</RootName>
      <Namespace></Namespace>
      <ModuleName></ModuleName>

      <!-- Output file name (defaults to InputName.Generated.fs) -->
      <OutputFileName></OutputFileName>
    </FabulousAstJson>
  </ItemDefinitionGroup>

</Project>
