<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Per-generator properties: JSON -->
  <PropertyGroup>
    <!-- Suffix for JSON-generated files, e.g., MyFile.g.fs -->
    <FabulousAstJsonSuffix Condition="'$(FabulousAstJsonSuffix)' == ''">g</FabulousAstJsonSuffix>

    <!-- Set to false to disable JSON generation -->
    <EnableFabulousAstJson Condition="'$(EnableFabulousAstJson)' == ''">true</EnableFabulousAstJson>
  </PropertyGroup>

  <!-- Shared properties (used by all Fabulous.AST generators) -->
  <PropertyGroup>
    <!-- Output folder for generated files -->
    <FabulousAstOutputFolder Condition="'$(FabulousAstOutputFolder)' == ''">Generated</FabulousAstOutputFolder>
    <FabulousAstOutputPath Condition="'$(FabulousAstOutputPath)' == ''">$(MSBuildProjectDirectory)\$(FabulousAstOutputFolder)\</FabulousAstOutputPath>

    <!-- Helper: glob pattern for generated files (use in Compile Include) -->
    <FabulousAstGeneratedFiles>$(FabulousAstOutputFolder)/*.$(FabulousAstJsonSuffix).fs</FabulousAstGeneratedFiles>
  </PropertyGroup>

  <!-- Define item types -->
  <ItemGroup>
    <AvailableItemName Include="FabulousAstJson" />
  </ItemGroup>

  <!-- Default metadata for FabulousAstJson items -->
  <ItemDefinitionGroup>
    <FabulousAstJson>
      <RootName>Root</RootName>
    </FabulousAstJson>
  </ItemDefinitionGroup>

</Project>
