<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- Suffix for the output files, e.g., MyFile.cg.fs -->
    <FabulousAstJsonOutputSuffix Condition="'$(FabulousAstJsonOutputSuffix)' == ''">cg</FabulousAstJsonOutputSuffix>

    <!-- Output directory for generated files -->
    <FabulousAstJsonOutputDirSegment Condition="'$(FabulousAstJsonOutputDirSegment)' == ''">Generated</FabulousAstJsonOutputDirSegment>
    <FabulousAstJsonOutputDir Condition="'$(FabulousAstJsonOutputDir)' == ''">$(MSBuildProjectDirectory)\$(FabulousAstJsonOutputDirSegment)\</FabulousAstJsonOutputDir>

    <!-- Set to false to disable generation -->
    <EnableFabulousAstJsonGeneration Condition="'$(EnableFabulousAstJsonGeneration)' == ''">true</EnableFabulousAstJsonGeneration>
  </PropertyGroup>

  <!-- Define the FabulousAstJson item type -->
  <ItemGroup>
    <AvailableItemName Include="FabulousAstJson" />
  </ItemGroup>

  <!-- Default metadata for FabulousAstJson items -->
  <ItemDefinitionGroup>
    <FabulousAstJson>
      <RootName>Root</RootName>
      <ModuleName></ModuleName>
      <OutputFileName></OutputFileName>
    </FabulousAstJson>
  </ItemDefinitionGroup>

</Project>
