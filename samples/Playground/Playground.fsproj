<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <!-- Import Fabulous.AST.Json.Build props -->
    <Import Project="..\..\extensions\Fabulous.AST.Build\build\Fabulous.AST.Build.props" />

    <ItemGroup>
        <Compile Include="Common.fs" />
        <Compile Include="Generator.fs" />
        <!-- Generated files: glob for IDE visibility (expands when files exist) -->
        <Compile Include="$(FabulousAstGeneratedFiles)" />
        <!-- Files that depend on generated code -->
        <Compile Include="Program.fs" DependsOnFabulousAst="true" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\Fabulous.AST\Fabulous.AST.fsproj" />
        <ProjectReference Include="..\..\extensions\Fabulous.AST.Json\Fabulous.AST.Json.fsproj" />
    </ItemGroup>


    <!-- JSON files to generate types from -->
    <ItemGroup>
        <FabulousAstJson Include="schemas\user.json"
                         RootName="User"
                         ModuleName="Playground.Generated.User" />
        <FabulousAstJson Include="schemas\complex-api.json"
                         RootName="ApiResponse"
                         ModuleName="Playground.Generated.Api" />
    </ItemGroup>
    <!-- Import Fabulous.AST.Build targets -->
    <Import Project="..\..\extensions\Fabulous.AST.Build\build\Fabulous.AST.Build.targets" />

</Project>
